---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import SeoHead from "../components/SeoHead.astro";
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
  canonical?: string;
  ogImage?: string;
  schemaMarkup?: any;
}

const { title, description, canonical, ogImage, schemaMarkup } = Astro.props;
---

<html lang="en">
  <head>
    <SeoHead
      title={title || 'Celebgo â€“ concerts & celebrity events on the map'}
      description={description || 'Live map of concerts and celebrity events around the world.'}
      canonical={canonical}
      ogImage={ogImage}
      schemaMarkup={schemaMarkup}
    />
  </head>
  <body class="bg-gray-50">
    <Header />
    <main class="pt-16 min-h-screen">
      <slot />
    </main>
    <Footer />
  </body>
</html>
