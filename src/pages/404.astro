---
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "Page not found | Celebgo";
const description = "We couldn't find this page. Try going back to the main map.";
---

<BaseLayout title={title} description={description}>
  <div class="flex flex-col items-center justify-center min-h-[60vh] text-center px-4">
    <h1 class="text-6xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-pink-600 mb-6">
      404
    </h1>
    <h2 class="text-2xl font-bold text-gray-900 mb-4">
      Page Not Found
    </h2>
    <p class="text-gray-600 text-lg mb-8 max-w-md">
      We couldn't find this page. Try going back to the main map to see where the stars are tonight.
    </p>
    <a
      href="/"
      class="inline-flex items-center justify-center px-8 py-3 text-base font-medium text-white bg-purple-600 rounded-lg hover:bg-purple-700 transition"
    >
      Back to Map
    </a>
  </div>
</BaseLayout>
